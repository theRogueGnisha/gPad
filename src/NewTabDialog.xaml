<Window x:Class="gPad.NewTabDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New note"
        Height="200" Width="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource WindowBackground}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Name of the note:" Foreground="{StaticResource TextBrush}" Margin="0,0,0,8" FontSize="13"/>
        <TextBox x:Name="NameBox" Grid.Row="1" MinHeight="44" FontSize="14"
                 Background="{StaticResource TabBarBackground}" Foreground="{StaticResource TextBrush}"
                 CaretBrush="{StaticResource TextBrush}" BorderBrush="{StaticResource BorderBrush}"
                 Padding="10,10" Margin="0,0,0,20" VerticalContentAlignment="Center"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" IsDefault="True" Click="Ok_Click" Margin="0,0,8,0" Padding="16,6"
                    Background="#0E639C" Foreground="White" BorderThickness="0"/>
            <Button Content="Cancel" IsCancel="True" Click="Cancel_Click" Padding="16,6"
                    Background="{StaticResource TabBarBackground}" Foreground="{StaticResource TextBrush}" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
