<Window x:Class="gPad.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="gPad Settings"
        Height="460" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource WindowBackground}">
    <Window.Resources>
        <!-- Dark theme for TextBox (makes ComboBox display area readable) -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource TabBarBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="SettingsComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{StaticResource TabBarBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource TabHoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="132"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Notepad font" Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,16">
            <ComboBox x:Name="FontFamilyCombo" Style="{StaticResource DarkComboBox}"
                      Width="220" Height="28" MaxDropDownHeight="220"
                      Margin="0,0,8,0" Padding="6,2" FontSize="13"
                      ItemContainerStyle="{StaticResource SettingsComboBoxItem}"
                      SelectionChanged="FontFamilyCombo_SelectionChanged"
                      LostFocus="FontCombo_LostFocus" IsEditable="True"/>
            <ComboBox x:Name="FontSizeCombo" Style="{StaticResource DarkComboBox}"
                      Width="72" Height="28" MaxDropDownHeight="220"
                      Margin="0,0,8,0" Padding="6,2" FontSize="13"
                      ItemContainerStyle="{StaticResource SettingsComboBoxItem}"
                      SelectionChanged="FontSizeCombo_SelectionChanged"
                      LostFocus="FontCombo_LostFocus" IsEditable="True"/>
            <TextBlock Text=" pt" Foreground="{StaticResource TextBrush}" VerticalAlignment="Center" FontSize="13" MinWidth="24"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="Window transparency" Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
        <Grid Grid.Row="3" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="0%" Foreground="{StaticResource TextBrush}" FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <Slider x:Name="OpacitySlider" Grid.Column="1" Minimum="30" Maximum="100" Value="100"
                    VerticalAlignment="Center" ValueChanged="OpacitySlider_ValueChanged"
                    Foreground="{StaticResource TextBrush}"/>
            <TextBlock Grid.Column="2" Text="100%" Foreground="{StaticResource TextBrush}" FontSize="12" VerticalAlignment="Center" Margin="8,0,0,0"/>
        </Grid>

        <TextBlock Grid.Row="4" Text="Corner radius (0 = square)" Foreground="{StaticResource TextBrush}" Margin="0,0,0,6"/>
        <Border Grid.Row="5" Background="{StaticResource TabBarBackground}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                Width="260" Height="120" Margin="0,0,0,8" Padding="0">
            <Grid>
                <Border x:Name="CornerPreviewRect" Background="{StaticResource WindowBackground}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                        Margin="52,28" CornerRadius="4"/>
                <Grid Margin="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Orientation="Vertical">
                        <TextBlock Text="TL" Foreground="{StaticResource TextBrush}" FontSize="10" Margin="0,0,0,2"/>
                        <TextBox x:Name="CornerTL" Width="36" Height="22" Text="0" TextChanged="CornerRadiusBox_TextChanged" FontSize="11" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right" Orientation="Vertical">
                        <TextBlock Text="TR" Foreground="{StaticResource TextBrush}" FontSize="10" Margin="0,0,0,2"/>
                        <TextBox x:Name="CornerTR" Width="36" Height="22" Text="0" TextChanged="CornerRadiusBox_TextChanged" FontSize="11" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Orientation="Vertical">
                        <TextBlock Text="BL" Foreground="{StaticResource TextBrush}" FontSize="10" Margin="0,0,0,2"/>
                        <TextBox x:Name="CornerBL" Width="36" Height="22" Text="0" TextChanged="CornerRadiusBox_TextChanged" FontSize="11" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Orientation="Vertical">
                        <TextBlock Text="BR" Foreground="{StaticResource TextBrush}" FontSize="10" Margin="0,0,0,2"/>
                        <TextBox x:Name="CornerBR" Width="36" Height="22" Text="0" TextChanged="CornerRadiusBox_TextChanged" FontSize="11" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <Button Grid.Row="6" Content="Save &amp; Close" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,24,0,0"
                Padding="20,8" Click="Close_Click"
                Background="{StaticResource TabBarBackground}" Foreground="{StaticResource TextBrush}" BorderThickness="0"/>
    </Grid>
</Window>
